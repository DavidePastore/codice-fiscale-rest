
<!DOCTYPE html>
<html>
<head>
  {% block head %}
      <!-- Standard Meta -->
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
      
      <link rel="shortcut icon" href="{{ app.request.basepath }}/favicon.ico" type="image/x-icon">
      <link rel="icon" href="{{ app.request.basepath }}/favicon.ico" type="image/x-icon">

      <!-- Site Properties -->
      <title>{% block title %}{% endblock %} - Codice Fiscale REST</title>
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/reset.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/site.css">

      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/container.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/grid.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/header.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/image.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/menu.css">

      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/divider.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/dropdown.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/segment.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/button.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/form.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/list.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/icon.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/sidebar.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/table.css">
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/semantic/dist/components/transition.css">
      
      <!-- Custom style -->
      <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/css/style.css">

      <script src="{{ app.request.basepath }}/bower_components/jquery/dist/jquery.min.js"></script>
      <script src="{{ app.request.basepath }}/semantic/dist/components/visibility.js"></script>
      <script src="{{ app.request.basepath }}/semantic/dist/components/sidebar.js"></script>
      <script src="{{ app.request.basepath }}/semantic/dist/components/transition.js"></script>
      <script src="{{ app.request.basepath }}/semantic/dist/components/dropdown.js"></script>
      <script>
      $(document)
        .ready(function() {

          // fix menu when passed
          $('.masthead')
            .visibility({
              once: false,
              onBottomPassed: function() {
                $('.fixed.menu').transition('fade in');
              },
              onBottomPassedReverse: function() {
                $('.fixed.menu').transition('fade out');
              }
            })
          ;

          // create sidebar and attach to menu open
          $('.ui.sidebar')
            .sidebar('attach events', '.toc.item')
          ;

        })
      ;
      </script>
  {% endblock %}
</head>
<body>

{% block followingMenu %}
    <!-- Following Menu -->
    <div class="ui large top fixed hidden menu">
      <div class="ui container">
        <a class="{% if app.request.get('_route') == 'homepage' %}active{% endif %} item" href="{{ url('homepage') }}">
            <img class="logo" src="{{ app.request.basepath }}/images/logo1.png">
            Home
        </a>
        <a class="{% if app.request.get('_route') == 'documentazione' %}active{% endif %} item" href="{{ url('documentazione') }}">Documentazione</a>
        <a class="{% if app.request.get('_route') == 'prova' %}active{% endif %} item" href="{{ url('prova') }}">Prova</a>
      </div>
    </div>
{% endblock %}

{% block sidebarMenu %}
    <!-- Sidebar Menu -->
    <div class="ui vertical inverted sidebar menu">
      <a class="{% if app.request.get('_route') == 'homepage' %}active{% endif %} item" href="{{ url('homepage') }}">Home</a>
      <a class="{% if app.request.get('_route') == 'documentazione' %}active{% endif %} item" href="{{ url('documentazione') }}">Documentazione</a>
      <a class="{% if app.request.get('_route') == 'prova' %}active{% endif %} item" href="{{ url('prova') }}">Prova</a>
    </div>
{% endblock %}


<!-- Page Contents -->
<div class="pusher">
  <div class="ui inverted vertical masthead center aligned segment">

    <div class="ui container">
      <div class="ui large secondary inverted pointing menu">
        <a class="toc item">
          <i class="sidebar icon"></i>
        </a>
        <a class="{% if app.request.get('_route') == 'homepage' %}active{% endif %} item" href="{{ url('homepage') }}">
            <img class="logo" src="{{ app.request.basepath }}/images/logo1.png">
            Home
        </a>
        <a class="{% if app.request.get('_route') == 'documentazione' %}active{% endif %} item" href="{{ url('documentazione') }}">Documentazione</a>
        <a class="{% if app.request.get('_route') == 'prova' %}active{% endif %} item" href="{{ url('prova') }}">Prova</a>
      </div>
    </div>

    <div class="ui text container">
      <img class="ui centered medium image inverted header" src="{{ app.request.basepath }}/images/logo.png">
      <h2>{% block mastheadH2 %}{% endblock %}</h2>
      {% block additionalMasthead %}{% endblock %}
    </div>

  </div>

  {% block content %}{% endblock %}

  <div class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="six wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="https://github.com/DavidePastore/codice-fiscale-rest" class="item"><i class="github icon"></i> GitHub</a>
            <a href="https://github.com/DavidePastore" class="item"><i class="heart icon"></i> Autore</a>
            <a href="http://logomakr.com/6fBbsG" class="item"><i class="leaf icon"></i> Logo URL</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Logo</h4>
          <p>
            Leaf graphic by <a href="http://www.freepik.com/">Freepik</a> from <a href="http://www.flaticon.com/">Flaticon</a>
            is licensed under <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a>.<br/>
            Made with <a href="http://logomakr.com" title="Logo Maker">Logo Maker</a>.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

</body>

</html>
